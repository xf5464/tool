			<s:Button label="进度" click="chooseSource(event)"/>
			
			<mx:Text id="processText" width="500"/>
		</mx:HBox>
		
		<mx:HBox>
			
			<s:Label text="当前处理文件" fontSize="14"/>
			
			<mx:Text id="currentText" width="500"/>
		</mx:HBox>
		

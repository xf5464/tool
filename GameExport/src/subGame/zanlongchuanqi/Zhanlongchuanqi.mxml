			<s:Label text="选择采集网站根目录"/>
				
			<mx:TextInput id="webRootText"  width="479"/>
		</mx:HBox>
		
		<mx:HBox>
			<s:Button label="选择资源输出目录" click="selectVersionFileOutput(event)"/>
			
			<mx:Text id="verSourceSaveText"  width="479"/>
		</mx:HBox>
		
		<mx:HBox>
			<s:Button label="开始采集" click="startCollection()"/>
			
